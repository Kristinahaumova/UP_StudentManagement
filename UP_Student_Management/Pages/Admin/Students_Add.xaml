<Window x:Class="UP_Student_Management.Pages.Admin.Students_Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UP_Student_Management.Pages.Admin"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Добавить студента" Height="550" Width="1200" ResizeMode="NoResize">
	<Grid Margin="15">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Левый столбец -->
		<Grid Grid.Column="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<TextBox
                x:Name="txtSurname"
                Grid.Row="0"
                Height="30"
                Padding="5"
                Margin="0,0,10,15"
                Style="{StaticResource MaterialDesignTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"
                materialDesign:HintAssist.Hint="Фамилия"/>

			<DatePicker
                x:Name="dateCapacity"
                Grid.Row="1"
                Height="30"
                Padding="5"
                Margin="0,0,10,15"
                Style="{StaticResource MaterialDesignDatePicker}"
                materialDesign:HintAssist.Hint="Дата рождения"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>

			<ComboBox
                x:Name="cmbEducation"
                Grid.Row="2"
                materialDesign:HintAssist.Hint="Образование"
                Padding="5"
                Margin="0,0,10,15"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>

			<ComboBox
                x:Name="cmbFinance"
                Grid.Row="3"
                materialDesign:HintAssist.Hint="Финансирование"
                Padding="5"
                Margin="0,0,10,15"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>

			<TextBox
                x:Name="txtExpulsion"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="4"
                Padding="5"
                Margin="0,0,10,15"
                Style="{StaticResource MaterialDesignTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"
                materialDesign:HintAssist.Hint="Информация об отчислении"/>

			<TextBox
                x:Name="txtPenalties"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="5"
                Padding="5"
                Margin="0,0,10,15"
                Style="{StaticResource MaterialDesignTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"
                materialDesign:HintAssist.Hint="Взыскания"/>
		</Grid>

		<!-- Центральный столбец -->
		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<TextBox
                x:Name="txtName"
                Grid.Row="0"
                Height="30"
                Padding="5"
                Margin="5,0,10,15"
                Style="{StaticResource MaterialDesignTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"
                materialDesign:HintAssist.Hint="Имя"/>

			<ComboBox
                x:Name="cmbGender"
                Grid.Row="1"
                materialDesign:HintAssist.Hint="Пол"
                Padding="5"
                Margin="5,0,10,15"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>

			<ComboBox
                x:Name="cmbDepartments"
                Grid.Row="2"
                materialDesign:HintAssist.Hint="Отделение"
                Padding="5"
                Margin="5,0,10,15"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>

			<TextBox
                x:Name="txtYear"
                Grid.Row="3"
                Height="30"
                Padding="5"
                Margin="5,0,10,15"
                Style="{StaticResource MaterialDesignTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"
                materialDesign:HintAssist.Hint="Год поступления"/>

			<DatePicker
                x:Name="dateExpulsion"
                Grid.Row="4"
                Height="30"
                Padding="5"
                Margin="5,0,10,15"
                Style="{StaticResource MaterialDesignDatePicker}"
                materialDesign:HintAssist.Hint="Дата отчисления"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>

			<!-- Область для отображения выбранных файлов -->
			<Border Grid.Row="5"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    Margin="5,0,10,15"
                    CornerRadius="5"
                    Background="#F5F5F5"
                    MaxHeight="100">
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<ItemsControl x:Name="lstFiles">
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="*"/>
											<ColumnDefinition Width="Auto"/>
										</Grid.ColumnDefinitions>
										<TextBlock Text="{Binding FileName}"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
										<Button Grid.Column="1"
                                                Content="✕"
                                                FontSize="10"
                                                Padding="3,0"
                                                Margin="5,0,0,0"
                                                Tag="{Binding}"
                                                Click="btnRemoveFile_Click"/>
									</Grid>
								</Border>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</ScrollViewer>
			</Border>

			<!-- Кнопки для работы с файлами -->
			<StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center">
				<Button x:Name="btnChooseFiles"
                        Click="btnChooseFiles_Click"
                        Content="Выбрать файлы"
                        Margin="5"
                        FontSize="12"
                        Height="25"
                        Background="#9EA1A2"
                        BorderBrush="#9EA1A2"/>
				<Button x:Name="btnClearFiles"
                        Click="btnClearFiles_Click"
                        Content="Очистить все"
                        Margin="5"
                        FontSize="12"
                        Height="25"
                        Foreground="Black"
                        Background="White"
                        BorderBrush="White"/>
			</StackPanel>

			<!-- Кнопки действий -->
			<StackPanel Grid.Row="7"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom">
				<Button x:Name="btnAdd"
                        Click="btnAdd_Click"
                        Content="Добавить"
                        Margin="5"
                        Height="30"
                        Background="#3EB489"
                        BorderBrush="#3EB489"/>
				<Button x:Name="btnCancel"
                        Click="btnCancel_Click"
                        Content="Отмена"
                        Margin="5"
                        Height="30"
                        Background="#E41613"
                        BorderBrush="#E41613"/>
			</StackPanel>
		</Grid>

		<!-- Правый столбец -->
		<Grid Grid.Column="2">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<TextBox
                x:Name="txtPatronomyc"
                Grid.Row="0"
                Height="30"
                Padding="5"
                Margin="5,0,10,15"
                Style="{StaticResource MaterialDesignTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"
                materialDesign:HintAssist.Hint="Отчество"/>

			<TextBox
                x:Name="txtPhoneNumber"
                Grid.Row="1"
                Height="30"
                Padding="5"
                Margin="5,0,10,15"
                Style="{StaticResource MaterialDesignTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"
                materialDesign:HintAssist.Hint="Контактный номер"/>

			<TextBox
                x:Name="txtGroup"
                Grid.Row="2"
                Height="30"
                Padding="5"
                Margin="5,0,10,15"
                Style="{StaticResource MaterialDesignTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"
                materialDesign:HintAssist.Hint="Группа"/>

			<TextBox
                x:Name="txtYearEnd"
                Grid.Row="3"
                Height="30"
                Padding="5"
                Margin="5,0,10,15"
                Style="{StaticResource MaterialDesignTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"
                materialDesign:HintAssist.Hint="Год окончания"/>

			<TextBox
                x:Name="txtParentsInfo"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="4"
                Padding="5"
                Margin="5,0,10,15"
                Style="{StaticResource MaterialDesignTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"
                materialDesign:HintAssist.Hint="Сведения о родителях"/>

			<TextBox
                x:Name="txtDescription"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="5"
                Padding="5"
                Margin="5,0,10,15"
                Style="{StaticResource MaterialDesignTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"
                materialDesign:HintAssist.Hint="Примечание"/>
		</Grid>
	</Grid>
</Window>