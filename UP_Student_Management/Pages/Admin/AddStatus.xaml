                VerticalContentAlignment="Top"
                Grid.Row="8"
                Margin="0,0,10,15"
                Padding="5"
                Style="{StaticResource MaterialDesignTextBox}" 
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                materialDesign:HintAssist.Hint="Присутствовали представители"/>
            <TextBox 
                x:Name="txtConclusion"
                AcceptsReturn="True"
