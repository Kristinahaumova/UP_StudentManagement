                Margin="0,0,10,15"
                Padding="5"
                Style="{StaticResource MaterialDesignTextBox}" 
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                materialDesign:HintAssist.Hint="Приказ о присвоении статуса"/>
            <TextBox 
                x:Name="txtNoteOvz"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
