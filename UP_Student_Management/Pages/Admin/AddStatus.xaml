                x:Name="txtReasonStart"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="6"
                Margin="0,0,10,15"
                Padding="5"
                Style="{StaticResource MaterialDesignTextBox}" 
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
