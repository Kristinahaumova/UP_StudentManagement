<Window x:Class="UP_Student_Management.Pages.Admin.AddStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:UP_Student_Management.Pages.Admin"
        mc:Ignorable="d"
        Title="Добавить статус студенту" Height="600" Width="600" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ComboBox
            x:Name="cmbStatus" 
            Grid.Row="0"
            materialDesign:HintAssist.Hint="Статус" 
            Padding="5" 
            Margin="0,0,10,15" 
            materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>
        <Grid x:Name="sirota" Visibility="Hidden" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
            <DatePicker 
                x:Name="dateStartStatus"
                Grid.Row="1" 
                Height="30" 
                Padding="5" 
                Margin="0,0,10,15" 
                Style="{StaticResource MaterialDesignDatePicker}"
                materialDesign:HintAssist.Hint="Начало статуса"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>
            <DatePicker 
                x:Name="dateEndStatus" 
                Grid.Row="2" 
                Height="30" 
                Padding="5" 
                Margin="0,0,10,15" 
                Style="{StaticResource MaterialDesignDatePicker}"
                materialDesign:HintAssist.Hint="Конец статуса"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>
            <TextBox 
                x:Name="txtStatus"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="3"
                Margin="0,0,10,15"
                Padding="5"
                Style="{StaticResource MaterialDesignTextBox}" 
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                materialDesign:HintAssist.Hint="Приказ о присвоении статуса"/>
            <TextBox 
                x:Name="txtNote"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="4"
                Margin="0,0,10,15"
                Padding="5"
                Style="{StaticResource MaterialDesignTextBox}" 
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                materialDesign:HintAssist.Hint="Примечание"/>
            <Button Click="addFile" Content="Добавить файл" Grid.Row="5" HorizontalAlignment="Left" Height="30"/>
            <Button Click="deleteFile" Content="❌Удалить файл" Grid.Row="5" HorizontalAlignment="Right" Height="30" Foreground="Black" Background="white" BorderBrush="White"/>
        </Grid>
        <Grid x:Name="invalid" Visibility="Hidden"  Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <DatePicker 
                x:Name="dateStartStatusInvalid"
                Grid.Row="1" 
                Height="30" 
                Padding="5" 
                Margin="0,0,10,15" 
                Style="{StaticResource MaterialDesignDatePicker}"
                materialDesign:HintAssist.Hint="Начало статуса"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>
            <DatePicker 
                x:Name="dateEndStatusInvalid" 
                Grid.Row="2" 
                Height="30" 
                Padding="5" 
                Margin="0,0,10,15" 
                Style="{StaticResource MaterialDesignDatePicker}"
                materialDesign:HintAssist.Hint="Конец статуса"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>
            <TextBox 
                x:Name="txtStatusInvalid"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="3"
                Margin="0,0,10,15"
                Padding="5"
                Style="{StaticResource MaterialDesignTextBox}" 
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                materialDesign:HintAssist.Hint="Приказ о присвоении статуса"/>
            <TextBox 
                x:Name="txtNoteInvalid"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="4"
                Margin="0,0,10,15"
                Padding="5"
                Style="{StaticResource MaterialDesignTextBox}" 
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                materialDesign:HintAssist.Hint="Примечание"/>
            <TextBox 
                x:Name="txtTypeInvalid"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="5"
                Margin="0,0,10,15"
                Padding="5"
                Style="{StaticResource MaterialDesignTextBox}" 
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                materialDesign:HintAssist.Hint="Вид инвалидности"/>
            <Button Click="addFile" Content="Добавить файл" Grid.Row="6" HorizontalAlignment="Left" Height="30"/>
            <Button Click="deleteFile" Content="❌Удалить файл" Grid.Row="6" HorizontalAlignment="Right" Height="30" Foreground="Black" Background="white" BorderBrush="White"/>
        </Grid>
        <Grid x:Name="ovz" Visibility="Hidden" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <DatePicker 
                x:Name="dateStartStatusOvz"
                Grid.Row="1" 
                Height="30" 
