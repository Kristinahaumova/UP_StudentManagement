            <Button Click="deleteFile" Content="❌Удалить файл" Grid.Row="4" HorizontalAlignment="Right" Height="30" Foreground="Black" Background="white" BorderBrush="White"/>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Click="btnAdd" Content="Добавить" Margin="5" Height="30" Background="#3EB489" BorderBrush="#3EB489"/>
            <Button Click="btnCancel" Content="Отмена" Margin="5" Height="30" Background="#E41613" BorderBrush="#E41613"/>
        </StackPanel>
