                materialDesign:HintAssist.Hint="Дата выселения"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>
            <ComboBox 
                x:Name="cmbRoom"
                Grid.Row="3"
                Margin="0,0,10,15"
                Padding="5"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                materialDesign:HintAssist.Hint="Комната"/>
            <TextBox 
                x:Name="txtNoteHostel"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
