                Grid.Row="1" 
                Height="30" 
                Padding="5" 
                Margin="0,0,10,15" 
                Style="{StaticResource MaterialDesignDatePicker}"
                materialDesign:HintAssist.Hint="Дата постановки на учет"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>
            <DatePicker 
                x:Name="dateEndStatusRisk" 
                Grid.Row="2" 
                Height="30" 
                Padding="5" 
                Margin="0,0,10,15" 
                Style="{StaticResource MaterialDesignDatePicker}"
                materialDesign:HintAssist.Hint="Дата снятия с учета"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>
            <ComboBox
                x:Name="cmbTypeRisk" 
                Grid.Row="3"
                materialDesign:HintAssist.Hint="Тип группы риска" 
                Padding="5" 
                Margin="0,0,10,15" 
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>
            <TextBox 
                x:Name="txtOsnovanieStart"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="4"
                Margin="0,0,10,15"
                Padding="5"
                Style="{StaticResource MaterialDesignTextBox}" 
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
