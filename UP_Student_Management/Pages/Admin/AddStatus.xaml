            <Button Click="deleteFile" Content="❌Удалить файл" Grid.Row="10" HorizontalAlignment="Right" Height="30" Foreground="Black" Background="white" BorderBrush="White"/>
        </Grid>
        <Grid x:Name="svo" Visibility="Hidden" Grid.Row="1">
