                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                SpellCheck.IsEnabled="True"
                Language="ru-ru"
                VerticalContentAlignment="Top"
                Grid.Row="7"
