                Padding="5"
                Style="{StaticResource MaterialDesignTextBox}" 
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                materialDesign:HintAssist.Hint="Примечание"/>
            <Button Click="addFile" Content="Добавить файл" Grid.Row="9" HorizontalAlignment="Left" Height="30"/>
            <Button Click="deleteFile" Content="❌Удалить файл" Grid.Row="9" HorizontalAlignment="Right" Height="30" Foreground="Black" Background="white" BorderBrush="White"/>
        </Grid>
        <Grid x:Name="sppp" Visibility="Hidden" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <DatePicker 
                x:Name="dateSPPP"
                Grid.Row="1" 
                Height="30" 
                Padding="5" 
                Margin="0,0,10,15" 
                Style="{StaticResource MaterialDesignDatePicker}"
                materialDesign:HintAssist.Hint="Дата"
                materialDesign:TextFieldAssist.UnderlineBrush="#0066CC"/>
            <TextBox 
                x:Name="txtOsnovanieSPPP"
                AcceptsReturn="True"
