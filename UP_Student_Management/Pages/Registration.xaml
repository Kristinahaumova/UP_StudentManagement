<Page x:Class="UP_Student_Management.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP_Student_Management.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="#FFD1DC"/>
                <GradientStop Offset="1" Color="#5cc5e5"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.6*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" Effect="{DynamicResource MaterialDesignElevation4}">
            <TextBlock 
                Text="Регистрация в системе" 
                Foreground="#0066CC" 
                FontSize="24" 
                FontWeight="Bold" 
                HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center" Effect="{DynamicResource MaterialDesignElevation4}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox 
                    x:Name="txtLogin" 
                    Margin="0,0,0,20" 
                    Style="{StaticResource MaterialDesignTextBox}" 
                    materialDesign:HintAssist.Hint="Введите логин" 
                    materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                    Width="300"/>
                <PasswordBox
                    x:Name="pwdPassword"
                    Margin="0,0,0,20" 
                    Style="{StaticResource MaterialDesignPasswordBox}" 
                    materialDesign:HintAssist.Hint="Введите пароль" 
                    materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                    Width="300"/>
                <PasswordBox
                    x:Name="pwdRetryPassword"
                    Margin="0,0,0,20" 
                    Style="{StaticResource MaterialDesignPasswordBox}" 
                    materialDesign:HintAssist.Hint="Подтвердите пароль" 
                    materialDesign:TextFieldAssist.UnderlineBrush="#0066CC" 
                    Width="300"/>
                <Button
                    Click="Regin"
                    Content="Зарегистрироваться" 
                    Background="#FFD1DC" 
                    BorderBrush="#FFD1DC" 
                    Style="{StaticResource MaterialDesignRaisedButton}" 
                    Width="300"/>
                <Label 
                    Content="Уже зарегистрированы?" 
                    MouseDown="OpenLogin" 
                    HorizontalAlignment="Center" 
                    Foreground="#0066CC" 
                    FontSize="12" 
                    Margin="0,5,0,0" 
                    Style="{StaticResource MaterialDesignLabel}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
